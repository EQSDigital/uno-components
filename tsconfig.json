{
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": "./",
      "downlevelIteration": true,
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "target": "ES2022",
      "module": "es2020",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2018",
        "dom"
      ],
      "paths": {
        "uno-ui-lib": [
          "dist/uno-ui-lib"
        ],
        "uno-ui-lib/*": [
          "dist/uno-ui-lib/*"
        ]
      },
      "useDefineForClassFields": false
    }
}